<div class=''>
  <div class='py-14 max-w-5xl mx-auto'>
    <h1 class='text-center text-3xl text-black font-bold'>マイページタックル一覧</h1>
    <div class='mt-10 text-center'>
      <%= link_to '新しいタックルを作成する', new_tackle_path, class: 'btn bg-orange text-white py-2 px-10 underline-offset-2 hover:orange font-bold ' %>
    </div>
    <!-- タックルを一覧表示 -->
    <div class='flex flex-wrap mt-10'>
      <% if @tackles.present? %>
        <%= render @tackles %>
      <% else %>
        <div class="mb-3">タックルを登録しましょう</div>
      <% end %>
    </div>
  </div>
</div>