<% content_for(:title, t('.title')) %>
<div class=''>
  <div class='py-14 max-w-5xl mx-auto'>
    <h1 class='text-center text-3xl text-black font-bold'><%= t('.title') %></h1>
    <div class='mt-10 text-center'>
      <%= link_to t('.create_new_tackle'), new_tackle_path, class: 'btn bg-orange text-white py-2 px-10 underline-offset-2 hover:orange font-bold ' %>
    </div>
    <!-- タックルを一覧表示 -->
    <div class='block md:flex md:flex-wrap mt-10'>
      <% if @tackles.present? %>
        <%= render @tackles %>
      <% else %>
        <div class="mb-3">タックルを登録しましょう</div>
      <% end %>
    </div>
  </div>
</div>