<div class='w-1/3 p-2'>
  <div class='flex flex-col justify-between h-52 text-center shadow-xl bg-white rounded-lg overflow-hidden'>
    <%= image_tag reel.image, class: "w-full h-24 object-cover" if reel.image.attached? %>
    <div class='text-center flex flex-col flex-1 p-4'>
      <h2 class='text-lg font-bold text-black'><%= reel.name %></h2>
      <p class='grow text-sm'><%= reel.memo %></p>
      <div class='flex justify-end'>
        <%= link_to edit_tackle_reel_path(@tackle, reel) do %>
          <i class="fa-solid fa-pen text-blue"></i>
        <% end %>
        <%= link_to tackle_reel_path(@tackle, reel), method: :delete, data: { turbo_method: :delete, turbo_confirm: t('.delete') }, class: 'ml-2' do %>
          <i class="fa-solid fa-trash text-blue"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
