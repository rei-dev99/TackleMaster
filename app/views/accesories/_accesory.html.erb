<div class='w-1/3 p-2'>
  <div class='flex flex-col justify-between h-52 text-center shadow-xl bg-white rounded-lg overflow-hidden'>
    <%= image_tag accesory.image, class: "w-full h-24 object-cover" if accesory.image.attached? %>
    <div class='text-center flex flex-col flex-1 p-4'>
      <h2 class='text-lg font-bold text-black'><%= accesory.name %></h2>
      <p class='grow text-sm'><%= accesory.memo %></p>
    </div>
  </div>
</div>
