<% content_for(:title, t('.title')) %>
<div class=''>
  <div class='py-14 max-w-lg mx-auto'>
    <h1 class='text-center text-3xl text-black font-bold'><%= t('.title') %></h1>
    <%= form_with(url: login_path, class: 'mt-6') do |f| %>
      <div class='mt-4'>
        <%= f.label :email, class: 'text-black font-bold' %>
        <%= f.email_field :email, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>
      <div class='mt-4'>
        <%= f.label :password, class: 'text-black font-bold' %>
        <%= f.password_field :password, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>
      <div class='mt-8 text-center'>
        <button type="submit" class="font-bold bg-blue text-white hover:bg-blue-700 py-2 px-10 rounded focus:outline-none focus:shadow-outline"><%= t('.login') %></button>
      </div>
    <% end %>
    <div class='mt-8 text-center'>
      <%= link_to t('.to_register_page'), new_user_path, class: 'underline underline-offset-2 text-link hover:orange font-bold' %>
    </div>
    <div class='mt-8 text-center'>
      <%= link_to t('.password_forget'), new_user_path, class: 'underline underline-offset-2 text-orange font-bold' %>
    </div>
  </div>

</div>