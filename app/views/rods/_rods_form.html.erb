<%= form_with model: [ @tackle, @rod ], class: 'mt-6', local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class='mt-10'>
        <%= f.label :name, class: 'text-black font-bold text-xl required' %>
        <%= f.text_field :name, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline border-blue border-2' %>
    </div>
    <div class='mt-10'>
        <%= f.label :image, class: 'text-black font-bold text-xl required' %>
        <%= f.file_field :image, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline border-blue border-2' %>
    </div>
    <div class='mt-10'>
        <%= f.label :memo, class: 'text-black font-bold text-xl' %>
        <%= f.text_area :memo, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline border-blue border-2' %>
    </div>
    <div class='mt-8 text-center'>
        <button type="submit" class="btn font-bold bg-blue text-white hover:bg-blue-700 py-2 px-10 rounded focus:outline-none focus:shadow-outline"><%= t('.submit') %></button>
    </div>
<% end %>