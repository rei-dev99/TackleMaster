<div class='flex flex-col justify-between text-center shadow-xl bg-white rounded-lg overflow-hidden h-full'>
  <div class="overflow-hidden">
    <%= link_to tackle_rod_path(@tackle, rod), class: 'relative' do %>
      <% if rod.image.attached? %>
        <%= image_tag rod.image, class: "w-full md:h-36 sm:h-32 h-28 object-cover block hover:shadow-lg transition-transform duration-300 transition transform hover:scale-105" %>
      <% else %>
        <%= image_tag 'default_item.png', class: "w-full md:h-36 sm:h-32 h-28 object-cover block hover:shadow-lg transition-transform duration-300 transition transform hover:scale-105" %>
      <% end %>
      <div class="absolute right-3 bottom-3 border-orange border-2 rounded-full text-white bg-orange font-bold px-2 py-1 md:text-sm text-xs opacity-80">ロッド</div>
    <% end %>
  </div>
  <div class='text-center flex flex-col flex-1 md:p-4 p-2'>
    <h2 class='md:text-base text-sm font-bold text-blue'><%= rod.name %></h2>
    <div class="flex justify-center md:mt-3 mt-2">
      <% if rod.maker.present? %>
        <p class='md:text-sm text-xs font-bold text-orange block border border-2 p-1 rounded'><%= rod.maker %></p>
      <% else %>
        <p></p>
      <% end %>
    </div>
    <div class="md:mt-3 mt-2">
      <p class='grow md:text-sm text-xs text-black'><%= rod.memo.truncate(35) %></p>
    </div>
    <div class="md:mt-4 mt-2">
      <p class="md:text-sm text-xs text-silver"><%= rod.updated_at.strftime('%Y/%m/%d %H:%M') %></p>
    </div>
    <div class='flex justify-end mt-auto md:text-base text-sm'>
      <%= link_to edit_tackle_rod_path(@tackle, rod) do %>
        <i class="fa-solid fa-pen text-blue"></i>
      <% end %>
      <%= link_to tackle_rod_path(@tackle, rod), method: :delete, data: { turbo_method: :delete, turbo_confirm: t('.delete') }, class: 'ml-2' do %>
        <i class="fa-solid fa-trash text-blue"></i>
      <% end %>
    </div>
  </div>
</div>
