        <table class="md:w-full w-[800px]">
          <thead>
            <tr class="bg-[#D1D5DA]">
              <th class="py-3 px-4 border-2 border-blue">ルアーの種類</th>
              <th class="py-3 px-4 border-2 border-blue">特徴</th>
              <th class="py-3 px-4 border-2 border-blue">用途</th>
            </tr>
