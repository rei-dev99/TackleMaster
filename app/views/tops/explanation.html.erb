          <table class="md:w-full w-[800px]">
            <thead>
              <tr class="bg-[#D1D5DA]">
                <th class="py-3 px-4 border-2 border-blue">号数</th>
                <th class="py-3 px-4 border-2 border-blue">ポンド(lb)</th>
                <th class="py-3 px-4 border-2 border-blue">魚種</th>
              </tr>
            </thead>
